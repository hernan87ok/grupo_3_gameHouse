    <main>



    <section class="fixed">

        <h2>MI COMPRA</h2>
        
        <h3>MI CARRITO</h3>

        <div class="portada">
            <img src="/img/covers/fifa22.jpeg" alt="FIFA 22 - PS4" class="portada-b">
        </div>


        <p><input type="text" id="nombre" name="nombre" value="FIFA 22" readonly></p>

        <p><input type="text" id="valor" name="total" value="Total: $11800" readonly></p>

        <div class="form-group">
            <label for="select">Cantidad</label>
            <select class="form-control" id="formControl">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
