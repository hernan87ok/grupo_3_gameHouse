              <p><input type="name" class="form-control" id="dni" placeholder="DNI"></p>
              <p><input type="name" class="form-control" id="Telefono de Contacto" placeholder="Telefono de Contacto"></p>
              <p><input type="name" class="form-control" id="Direccion" placeholder="Direccion"></p>
              <p><input type="name" class="form-control" id="Localidad" placeholder="Localidad"></p>
              <p><input type="name" class="form-control" id="Codigo Postal" placeholder="Codigo Postal"></p>

            </div>
        </form>

        <h3>PAGO</h3>
        
        <form>
            <div class="form-row align-items-center">
              <div class="col-auto my-1">
                <label class="mr-sm-2" for="inlineFormCustomSelect">Metodo de Pago</label>
                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                  <option selected>Seleccione...</option>
                  <option value="1">MercadoPago</option>
                  <option value="2">Tarjeta de Credito/Debito</option>
                  <option value="3">Rapipago/PagoFacil</option>
                </select>
              </div>
        </form>      

        <p><button type="button" class="confirm">CONFIRMAR</button></p>

    </section>





    </main>
