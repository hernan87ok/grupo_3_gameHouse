<!DOCTYPE html>
<html lang="en">
  
    <%- include('../partials/head.ejs') %> 

    <body>
    
    <%- include('../partials/header.ejs') %> 




    <main class="fixed">

    <div class="containerreg">

        <h3 class="formulario">Ingresá a tu cuenta</h3>

        <form class="form-login" action="/users/login" method="POST"> 

            <div class="div-input">
					<input type="text" placeholder="Correo electrónico" name="email" id="username" class="form-control">
					<% if (locals.errors && errors.email) { %>
						<div class="text-danger">
							<%= errors.email.msg %>
						</div>
					<% } %>
            </div>
        
                <div class="div-input">
                <input type="password" placeholder="Contraseña" name="password" id="password" class="form-control">
                <% if (locals.errors && errors.password) { %>
                    <div class="text-danger">
                        <%= errors.password.msg %>
                    </div>
                <% } %>
                </div>
            </div>    
            
            <div>
                <label class="form-check-label">
                    <input type="checkbox" class="form-check-input" name="remember_user"> Recordar mi usuario
                </label>
            </div>


            <div class="div-boton">
                <label for="boton-enviar">
                    
                    <button class="regres" type="submit">Ingresar</button>
    
                </label>
            </div>
        
        </form>

        <h4><a href="/">Olvidé mi contraseña</h4></a>
            <br>
        <h4><a href="/users/register">No tenés cuenta? Registrate!</h4></a>
    
    </div>

    </main>
    
    <%- include('../partials/footer.ejs') %> 


    <script src="/js/loginValidation.js"></script>
    

</body>




</html>